<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.linkee.linkeeapi.report.mapper.ReportMapper">

    <!-- 전체 신고 목록 조회 (관리자) -->
    <select id="findAllReports" resultType="com.linkee.linkeeapi.report.model.dto.response.ReportListResponseDto">
        SELECT
            report_title,
            report_type,
            reporter_id,
            report_status
        FROM tb_report
        ORDER BY created_at DESC
            LIMIT #{offset}, #{limit}
    </select>

    <!-- 유저별 신고 조회 -->
    <select id="findReportsByUser" resultType="com.linkee.linkeeapi.report.model.dto.response.ReportListResponseDto">
        SELECT
            report_title,
            report_type,
            reporter_id,
            report_status
        FROM tb_report
        WHERE reporter_id = #{userId}
        ORDER BY created_at DESC
            LIMIT #{offset}, #{limit}
    </select>

</mapper>

